{{#if addNewQuestion}}
<h3>Got a question</h3>
<form id="questionForm">
  <div class="form-group">
    <label for="author">Your name:</label>
    {{input type="text" class="form-control" value=author id="author"}}
  </div>
  <div class="form-group">
    <label for="question">Question:</label>
    {{input type="text" class="form-control" value=question id="question"}}
  </div>
  <div class="form-group">
    <label for="notes">Notes:</label>
    {{textarea class="form-control" rows="5" value=notes id="notes" placeholder="Accepts valid html!"}}
  </div>
</form>
<button {{action 'saveQuestion'}} form="questionForm">Save</button>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
