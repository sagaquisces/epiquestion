{{#if updateQuestionForm}}
<h4>Update {{question.author}}'s Question</h4>
<form id="questionForm">
  <div class="form-group">
    <label for="author">Your name:</label>
    {{input type="text" class="form-control" value=question.author id="author"}}
  </div>
  <div class="form-group">
    <label for="question">Question:</label>
    {{input type="text" class="form-control" value=question.query id="query"}}
  </div>
  <div class="form-group">
    <label for="notes">Notes:</label>
    {{textarea class="form-control" rows="5" value=question.notes id="notes" placeholder="Accepts valid html!"}}
  </div>
</form>
<button form="questionForm" {{action 'update' question}}>Update</button>
{{else}}
  <button {{action 'updateQuestionFormShow'}}>Update</button>
{{/if}}
